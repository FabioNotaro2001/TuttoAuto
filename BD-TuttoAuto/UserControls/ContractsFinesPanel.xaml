<UserControl x:Class="BD_TuttoAuto.UserControls.ContractsFinesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_TuttoAuto.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="290" d:DesignWidth="500">
    <Grid IsVisibleChanged="Grid_IsVisibleChanged">
        <Label x:Name="LblContracts" Content="Multe e contratti" Margin="10,8,10,0"  FontSize="24" HorizontalContentAlignment="Center" Height="43" VerticalAlignment="Top"/>
        <Grid Margin="0,56,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="MULTE" Margin="0,3,0,0" FontWeight="Bold" Height="28" VerticalAlignment="Top" HorizontalAlignment="Center" Width="50" />
            <Label Content="CONTRATTI" Margin="0,5,0,0" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center" Width="76" Height="24" VerticalAlignment="Top" />
            <DataGrid x:Name="DtgFines"  Margin="12,36,12,10" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True" />
            <DataGrid x:Name="DtgContracts"  Margin="12,36,13,10" Grid.Column="1" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True" />
        </Grid>
    </Grid>
</UserControl>
