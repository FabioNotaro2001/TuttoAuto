<UserControl x:Class="BD_TuttoAuto.UserControls.CreateAdPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_TuttoAuto.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid IsVisibleChanged="Grid_IsVisibleChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="161*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <Label Content="Creazione Annuncio" Margin="10,8,10,0"  FontSize="24" HorizontalContentAlignment="Center" Height="43" VerticalAlignment="Top"/>
        <Label Content="Prezzo" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Regione" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtPrezzo" HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" MaxLength="9" MaxLines="1" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnPubblica" Content="Pubblica" Margin="0,21,0,0" HorizontalAlignment="Center" Width="74" Height="31" VerticalAlignment="Top" Click="BtnPubblica_Click" Grid.Row="1"/>
        <ComboBox x:Name="CmbRegion" Margin="0,148,0,0" HorizontalAlignment="Center" Width="120" Grid.RowSpan="2" Height="22" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
