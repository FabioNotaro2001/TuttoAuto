<UserControl x:Class="BD_TuttoAuto.UserControls.SearchResultsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_TuttoAuto.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid IsVisibleChanged="Grid_IsVisibleChanged">
        <Label x:Name="LblSearch" Content="Risultati Ricerca" Margin="10,8,10,0"  FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="42" VerticalAlignment="Top" />
        <DataGrid x:Name="DtgSearchResults"  Margin="10,55,10,50" AutoGeneratingColumn="DtgSearchResults_AutoGeneratingColumn" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True"/>
        <Button x:Name="BtnSelectCar" Margin="0,0,0,10" Click="BtnSelectCar_Click" HorizontalAlignment="Center" Width="84" Height="35" VerticalAlignment="Bottom">
            <TextBlock TextWrapping="Wrap" Height="17"><Run Language="it-it" Text="Seleziona"/><LineBreak/><Run Language="it-it"/></TextBlock>
        </Button>
    </Grid>
</UserControl>
