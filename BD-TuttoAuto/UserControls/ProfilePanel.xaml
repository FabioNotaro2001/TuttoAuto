<UserControl x:Class="BD_TuttoAuto.UserControls.ProfilePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BD_TuttoAuto.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid IsVisibleChanged="Grid_IsVisibleChanged">
        <Label x:Name="LblProfile" Content="Profilo di @Utente" Margin="10,10,10,196"  FontSize="24" HorizontalContentAlignment="Center"/>
        <Button x:Name="BtnConversations" Margin="128,105,128,105" Click="BtnConversations_Click">
            <TextBlock TextAlignment="Center">Le tue conversazioni/<LineBreak/> Apri conversazione</TextBlock>
        </Button>
        <Button x:Name="BtnPrivateArea" Margin="127,168,128,42" Click="BtnPrivateArea_Click">
            <TextBlock TextAlignment="Center" Text="La tua area privata"/>
        </Button>
    </Grid>
</UserControl>
